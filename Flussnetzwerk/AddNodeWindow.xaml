<Window x:Class="FlowNetworkWPF.AddNodeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Node" Height="171" Width="300">
    <Grid Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Node ID:" Grid.Row="0" VerticalAlignment="Center"/>
        <TextBox Name="NodeIdTextBox" Grid.Row="0" Margin="82,5,5,5"/>

        <TextBlock Text="X Coordinate:" Grid.Row="1" VerticalAlignment="Center"/>
        <TextBox Name="XTextBox" Grid.Row="1" Margin="82,5,5,5" IsReadOnly="True"/>

        <TextBlock Text="Y Coordinate:" Grid.Row="2" VerticalAlignment="Center"/>
        <TextBox Name="YTextBox" Grid.Row="2" Margin="82,5,5,5" IsReadOnly="True"/>

        <Button Content="Add Node" Grid.Row="3" Margin="5" Click="AddNodeButton_Click"/>
    </Grid>
</Window>
